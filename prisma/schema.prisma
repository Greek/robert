// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_DSN")
}

// generator
generator client {
  provider = "prisma-client-py"
}

model GuildConfiguration {
  id                      BigInt                 @id // Guild ID
  message_log_channel_id  BigInt?
  message_log_ignore_list MessageLogIgnoreList[]
  welcome_channel         BigInt?
  welcome_greeting        String?
  giveaway_channel        BigInt?
}

model ToiletGuild {
  id BigInt @id
}

model MessageLogIgnoreList {
  guildConfigurationId BigInt              @id
  GuildConfiguration   GuildConfiguration? @relation(fields: [guildConfigurationId], references: [id])
  channel_id           BigInt
}
